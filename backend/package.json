{
  "type": "module",
  "scripts": {
    "generate": "prisma generate",
    "migrate": "prisma migrate dev --name",
    "migrate:rollback": "prisma migrate reset --force --skip-seed",
    "migrate:prod": "prisma migrate deploy",
    "dev": "tsx watch src/server.ts",
    "build": "swc src --out-dir dist --strip-leading-paths",
    "start": "npm run migrate:prod && node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "COVERAGE=true jest"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.23",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "dependency-cruiser": "^17.0.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "prisma": "^5.19.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  }
}
